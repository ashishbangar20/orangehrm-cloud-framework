pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ashishbangar20/Ashish_oragneHRM_Automation.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t orangehrm-automation .'
            }
        }

        stage('Run Tests in Container') {
            steps {
                sh 'docker run --rm orangehrm-automation'
            }
        }
    }

    post {
        always {
            echo 'Pipeline Finished'
        }
    }
}